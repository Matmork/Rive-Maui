<?xml version="1.0" encoding="utf-8"?>

<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:maui="clr-namespace:Rive.Maui;assembly=Rive.Maui"
             NavigationPage.HasNavigationBar="False"
             x:Class="Example.Pages.MainPage">

    <ScrollView>
        <VerticalStackLayout Padding="30,0"
                             Spacing="25">

            <maui:RivePlayer HeightRequest="250"
                             Fit="Cover"
                             ResourceName="runner" />

            <Button Text="StateMachine" Clicked="StateMachine_OnClicked" />

            <Button Text="TouchInput" Clicked="TouchInput_OnClicked" />

            <Button Text="ControlPlayback" Clicked="ControlPlayback_OnClicked" />

            <Button Text="UpdateProperties" Clicked="UpdateProperties_OnClicked" />

        </VerticalStackLayout>
    </ScrollView>

</ContentPage>