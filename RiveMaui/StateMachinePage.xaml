<?xml version="1.0" encoding="utf-8"?>

<ContentPage
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:riveMaui="clr-namespace:Rive.Maui;assembly=Rive.Maui"
    x:Class="RiveMaui.StateMachinePage"
    Title="StateMachine">

    <Grid RowDefinitions="300,*" RowSpacing="25">
        <riveMaui:Rive
            x:Name="RiveAnimation"
            Grid.Row="0"
            Fit="Cover"
            ResourceName="animatedloginscreen" />
        <StackLayout Grid.Row="1" Spacing="25" Padding="25, 0">
            <HorizontalStackLayout Spacing="10">
                <Switch Toggled="Checking_OnToggled" />
                <Label Text="Checking" VerticalOptions="Center" />
            </HorizontalStackLayout>
            <Slider Minimum="0" Maximum="100" Value="0" ValueChanged="Slider_OnValueChanged" />
            <HorizontalStackLayout Spacing="10">
                <Switch Toggled="HandsUp_OnToggled" />
                <Label Text="Hands up" VerticalOptions="Center" />
            </HorizontalStackLayout>
            <Button Text="Failure" Clicked="Failure_OnClicked" />
            <Button Text="Success" Clicked="Success_OnClicked" />
        </StackLayout>
    </Grid>

</ContentPage>